{
  "name": "react-spotify-web-playback",
  "version": "0.5.0",
  "description": "A React Spotify Web Player",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/gilbarbara/react-spotify-web-playback.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/react-spotify-web-playback/issues"
  },
  "homepage": "https://github.com/gilbarbara/react-spotify-web-playback#readme",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "keywords": [
    "react",
    "react-component",
    "spotify",
    "player",
    "web playback"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "@gilbarbara/react-range-slider": "^0.4.4",
    "exenv": "^1.2.2",
    "nano-css": "^5.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/exenv": "^1.2.0",
    "@types/fetch-mock": "^7.3.1",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "@types/once": "^1.4.0",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@types/yargs": "^13.0.2",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "fetch-mock": "^7.3.9",
    "husky": "^3.0.3",
    "is-ci-cli": "^1.1.1",
    "jest": "^24.8.0",
    "jest-chain": "^1.1.2",
    "jest-enzyme": "^7.1.0",
    "jest-extended": "^0.11.2",
    "jest-serializer-html": "^7.0.0",
    "jest-watch-typeahead": "^0.3.1",
    "lint-staged": "^9.2.1",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^2.6.3",
    "serve": "^11.1.0",
    "size-limit": "^1.3.8",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3",
    "yargs": "^13.3.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc --outDir lib",
    "watch": "npm run build:ts -- -w",
    "clean": "rimraf lib",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watch --verbose",
    "lint": "tslint 'src/**/*.ts?(x)' 'test/**/*.ts?(x)' 'tool/**/*.ts?(x)'",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "validate": "npm run lint && npm run test:coverage && npm run build && npm run bundlesize",
    "bundlesize": "size-limit",
    "prepublishOnly": "npm run validate"
  },
  "browserslist": [
    "> 0.2%",
    "safari >= 9",
    "ios >= 9"
  ],
  "prettier": {
    "jsxBracketSameLine": false,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "tslint --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "18 KB"
    }
  ],
  "husky": {
    "hooks": {
      "post-merge": "ts-node tools update",
      "pre-commit": "ts-node tools has-commits && lint-staged"
    }
  }
}
